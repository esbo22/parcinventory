<%= form_with(model: @computer, local: true) do |form| %>
  <div class="form-group">
    <%= form.label "Nom de l'équipement :" %>
    <%= form.text_field :hostname, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Date :" %>
    <%= form.date_select :date, order: [:day, :month, :year], class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Fin de vie :" %>
    <%= form.date_select :endoflife, order: [:day, :month, :year], class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Assigné à :" %>
    <%= form.text_field :assigned_to, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= form.label :processor, "Processeur :" %>
    <%= form.select :processor, options_for_select(['i3', 'i5', 'i7', 'i9'], selected: @computer.processor), { prompt: 'Sélectionner un processeur' }, { class: 'form-control', id: 'processor_select' } %>
    <%= form.text_field :processor, placeholder: 'Ou entrez-le manuellement', class: 'form-control', id: 'processor_input' %>
  </div>

  <div class="form-group">
    <%= form.label :memory, "Mémoire :" %>
    <%= form.select :memory, options_for_select(['2Go', '4Go', '8Go', '16Go'], selected: @computer.memory), { prompt: 'Sélectionner une mémoire' }, { class: 'form-control', id: 'memory_select' } %>
    <%= form.text_field :memory, placeholder: 'Ou entrez-le manuellement', class: 'form-control', id: 'memory_input' %>
  </div>




  <div class="form-group">
    <%= form.label "Type de disque dur :" %>
    <%= form.text_field :type_disk, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "VPN installé :" %>
    <%= form.check_box :vpn %>
  </div>

  <div class="form-group">
    <%= form.label "Compte local :" %>
    <%= form.text_field :local_account, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Mot de passe local :" %>
    <%= form.text_field :local_password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit "Sauvegarder", class: 'form-control btn-primary' %>
  </div>
<% end %>
