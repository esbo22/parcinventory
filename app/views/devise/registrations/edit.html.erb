<div class="container my-5">
  <!-- Header Section -->
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edition de votre compte</h4>
  </div>

  <!-- Profile Card Section -->
  <div class="card mb-4">
    <div class="card-body">
      
      <!-- User Info Section -->
      <div class="text-center mt-3">
        <h2 class="name display-6"><%= resource_name.to_s.humanize %></h2>
        <p class="lead text-muted">Vous pouvez modifier votre compte ici</p>
      </div>

      <!-- Avatar Preview Section -->
      <div class="text-center mb-4">
        <%= image_tag(resource.avatar.attached? ? url_for(resource.avatar) : 'default-avatar.png', class: 'img-thumbnail rounded-circle avatar-preview', alt: 'Avatar') %>
      </div>

      <!-- Edit Form Section -->
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card p-4">
            <div class="card-body">
              <h5 class="card-title text-center">Formulaire d'édition</h5>

              <!-- Simple Form for Editing Account -->
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.error_notification %>

                <div class="mb-3">
                  <label for="user_email" class="custom-form-label">Modifier votre email</label>
                  <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control', placeholder: 'Adresse email' }, label: false %>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Actuellement en attente de confirmation pour : <%= resource.unconfirmed_email %></p>
                <% end %>

                <div class="mb-3">
                  <label for="user_password" class="custom-form-label">Modifier votre Mot de passe</label>
                  <%= f.input :password, hint: "(Laissez-le vide si vous ne souhaitez pas le modifier)", required: false, input_html: { autocomplete: "new-password", class: 'form-control', placeholder: 'Nouveau mot de passe' }, label: false %>
                </div>

                <div class="mb-3">
                  <label for="user_password" class="custom-form-label">Confirmer votre Mot de passe</label>
                  <%= f.input :password_confirmation, required: false, input_html: { autocomplete: "new-password", class: 'custom-form-control', placeholder: 'Confirmer le mot de passe' }, label: false %>
                </div>

                <div class="mb-3">
                  <label for="user_current_password" class="custom-form-label">Par mesure de sécurité, renseignez votre ancien mot de passe</label>
                  <%= f.input :current_password, hint: "(Nous avons besoin de votre mot de passe actuel pour confirmer vos changements)", required: true, input_html: { autocomplete: "current-password", class: 'form-control', placeholder: 'Mot de passe actuel' }, label: false %>
                </div>

                <!-- Avatar Upload Section -->
                <div class="mb-3">
                  <%= f.label :avatar, class: 'custom-form-label' %>
                  <%= f.file_field :avatar, class: 'form-control' %>
                  <small class="text-muted">Taille maximale du fichier : 2MB</small>
                </div>

                <div class="text-center">
                  <%= f.button :submit, "Mise à jour", class: "btn btn-outline-primary" %>
                </div>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Account Termination Section -->
  <div class="card mb-4">
    <div class="card-body">
      <h3 class="card-title text-center text-danger">Résilier mon compte</h3>
      <p class="text-center text-muted">Vous nous quittez ?</p>
      <div class="text-center">
        <%= button_to "Résilier mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr ?", turbo_confirm: "Êtes-vous sûr ?" }, method: :delete, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>

  <!-- Back to Previous Page -->
  <div class="text-center">
    <%= link_to "Retour", :back, class: "btn btn-outline-secondary" %>
  </div>
</div>
