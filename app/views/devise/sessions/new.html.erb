<div class=login-page>
  <div class="login-box">
    <h1>Se connecter</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="textbox">
        <i class="fa fa-user" aria-hidden="true"></i>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      </div>
      <div class="textbox">
        <i class="fa fa-lock" aria-hidden="true"></i>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "mot de passe actuel" } %>
      </div>


      <%= f.input :remember_me, as: :boolean, label: false, input_html: { style: 'display: inline; margin-right: 5px;' } if devise_mapping.rememberable? %>
      <label for="user_remember_me" style="display: inline;">Se souvenir de moi</label>




    <div class="">
      <%= f.button :submit, "Se connecter" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
