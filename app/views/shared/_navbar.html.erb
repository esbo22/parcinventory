<!-- app/views/shared/_navbar.html.erb -->
<nav class="navbar navbar-expand-sm navbar-pi sticky-top">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "logo4.png", class: "navbar-logo" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Clients", clients_path, class: "nav-link" %>
          </li>

          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.avatar.attached? %>
                <%= image_tag url_for(current_user.avatar), class: "avatar img-thumbnail rounded-circle", alt: "avatar", width: "40", height: "40" %>
              <% else %>
                <%= image_tag "default-avatar.png", class: "avatar img-thumbnail rounded-circle", alt: "avatar", width: "40", height: "40" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Compte", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to 'Mon profil', user_path(current_user), class: "nav-link" %>
              <%= link_to "Paramètres", "#", class: "dropdown-item" %>
              <%= link_to "Déconnexion", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
